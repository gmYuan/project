{
  "compilerOptions": {
    "target": "ES5", 
    "module": "commonjs",
    "strictNullChecks": true,
    "lib": ["ESNext", "dom", ],
    "experimentalDecorators": true,
    "downlevelIteration": true,
    "strictFunctionTypes": true,
    "esModuleInterop":false,  // 转换ES6模块导入导出
    "declaration": false,  // 编译TS文件时 自动生成声明文件
    // 用于 查找类型声明文件
    "baseUrl": "./",
    "paths": {
      "*":["types/*"]
    }
  },
  "include":[
    "src/**/*",
    "typings/**/*"
  ]
}
